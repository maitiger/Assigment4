@model IEnumerable<ASM.Models.Mark>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Theory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Practice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusMark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Theory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Practice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assignment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusMark)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMark">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMark">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMark">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
